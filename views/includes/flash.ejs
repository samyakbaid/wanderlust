<% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between align-items-center col-6 offset-3" role="alert">
        <span><%= success %></span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>


<% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-between align-items-center col-6 offset-3" role="alert">
        <span><%= error %></span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>

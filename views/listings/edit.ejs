<% layout('/layouts/boilerplate') %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-8 new-form">
            <h2 class="mb-4">Edit Your Listing</h2>
            <form method="post" action="/listing/<%= listing._id %>?_method=PUT" class="needs-validation" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" class="form-control" placeholder="Title" type="text" value='<%= listing.title %>' required>
                    <div class="invalid-feedback">Please enter a valid title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" placeholder="Description" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a valid description</div>
                </div>

                <!-- Current Image -->
                <div class="mb-3">
                    <label for="currentImage" class="form-label">Current Image</label>
                    <div>
                        <img src="<%= listing.image.url %>" alt="Current Image" width="200" id="currentImage">
                    </div>
                </div>

                <!-- New Image Upload -->
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="image" class="form-control" type="file" id="imageInput" onchange="previewImage()">
                </div>

                <!-- Preview of New Image -->
                <div class="mb-3">
                    <label for="previewImage" class="form-label">Preview New Image</label>
                    <img id="previewImage" src="#" alt="Preview" width="200" style="display:none;" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Price" class="form-control" type="number" value='<%= listing.price %>' required>
                        <div class="invalid-feedback">Please enter a valid price</div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="Country" class="form-control" type="text" value='<%= listing.country %>' required>
                        <div class="invalid-feedback">Please enter a valid country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Location" class="form-control" type="text" value='<%= listing.location %>' required>
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>
                <button class='btn btn-dark edit-btn' type="submit">Edit</button>
            </form>
        </div>
    </div>
</div>
<script src="/scripts/imagePreview.js"></script>
<script src="/scripts/validation.js"></script>
